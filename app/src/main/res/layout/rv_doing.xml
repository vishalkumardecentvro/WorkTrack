<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.cardview.widget.CardView
    android:id="@+id/cvTaskCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:id="@+id/llCardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_header_doing_fragment"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/tvName"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:fontFamily="sans-serif-black"
          android:padding="5dp"
          android:text="Hi vishal"
          android:textColor="@color/white"
          android:textSize="18sp" />

        <ImageView
          android:id="@+id/ivEdit"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:padding="5dp"
          android:src="@drawable/ic_edit" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/llDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llCardHeader"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/tvDate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_margin="5dp"
          android:layout_weight="1"
          android:fontFamily="sans-serif"
          android:padding="10dp"
          android:textColor="@color/black"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/tvTime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_weight="1"
          android:fontFamily="sans-serif"
          android:gravity="end"
          android:padding="10dp"
          android:textColor="@color/black"
          android:textSize="16sp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/llDateTime"
        android:orientation="horizontal">

        <Spinner
          android:id="@+id/spinner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_weight="1"
          android:fontFamily="sans-serif"
          android:padding="10dp"
          android:spinnerMode="dropdown"
          android:textColor="@color/black"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/tvPriority"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_weight="1"
          android:fontFamily="sans-serif"
          android:gravity="end"
          android:inputType="number"
          android:padding="10dp"
          android:textColor="@color/black"
          android:textSize="16sp" />

      </LinearLayout>

    </RelativeLayout>

  </androidx.cardview.widget.CardView>

</FrameLayout>